                form(action="/app/lessons/#{lesson._id}/?_method=DELETE", class="link", method="POST")
                  input(type="submit", id="buttonDelete" value="Delete")
    div(id="philosophy")
      //for imagen in imagenes
      h3 Philosophy lessons
      for lesson in lessons
        if(lesson.topic == "Philosophy")
